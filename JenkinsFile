currentBuild.displayName = "Myjob"+currentBuild.number
pipeline{
  agent any
  environment {
  MYENV="TEST pipepline"
  }
  
  stages {
    stage('Build ') {
      steps {
        echo "${MYENV}"
        echo "Build step 1"
        echo "Build step 2"
      }
    }
    stage('Test') {
      steps {
        step {
          echo "Test step 1"
          echo "Test step 2"
          }
        step {
        myen1=readMyenv()
        echo "${myenv1}"
        }
      }
    }
    stage('Deploy') {
      steps {
        echo "Deploy step 1"
        echo "Deploy step 2"
      }
    }
  }
}

def readMyenv() {
  def Myenv="${MYENV}"
  return Myenv
}
