currentBuild.displayName = "Myjob"+currentBuild.number
pipeline{
  agent any
  environment {
  MYENV="TEST pipepline"
  }
  stages {
    stage('pre Build ') {
      steps {
      myvar =readMyenv()
      echo $myvar
      }
    }
  stages {
    stage('Build ') {
      steps {
        echo "${MYENV}"
        echo "Build step 1"
        echo "Build step 2"
      }
    }
    stage('Test') {
      steps {
          echo "Test step 1"
          echo "Test step 2"
      }
    }
    stage('Deploy') {
      steps {
        echo "Deploy step 1"
        echo "Deploy step 2"
      }
    }
  }
}

def readMyenv() {
  def Myenv="${MYENV}"
  return Myenv
}
